<h1>Edit the Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <h3>Current Recipe Name: <%= @recipe.name %></h3>
  <h3>New Recipe Name: <input type="text" name="name" placeholder="New Recipe Name:"></h3>
  <h3>Current Ingredients: <%= @recipe.ingredients %></h3>
  <h3>New Ingredients: <input type="text" name="ingredients" placeholder="New Ingredients:"></h3>
  <h3>Current Cook Time: <%= @recipe.cook_time %></h3>
  <h3>New Cook Time: <input type="text" name="cook_time" placeholder="New Cook Time:"></h3>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="submit" value="submit">
</form>