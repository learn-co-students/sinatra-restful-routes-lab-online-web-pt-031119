<form method="post" action="/recipes/<%=@recipe.id %>">
  <input type="hidden" name="_method" value="patch"><br>

  <label>Name:</label>
  <input type="text" id="name" name="recipe[:name]" value="<%= @recipe.name %>"<br>

  <label>Ingredients:</label>
  <input type="text" id="ingredients" name="recipe[:ingredients]" value="<%= @recipe.ingredients %>"<br>

  <label>Cook Time:</label>
  <input type="text" id="cook_time" name="recipe[:cook_time]" value="<%= @recipe.cook_time %>"<br>

  <input type="submit" id="submit">
</form>
